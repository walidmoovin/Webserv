{
	"max_clients": 30,
	"servers": 
	[
		{
			"listen": ["80", "[::]:80"],
			"server_name": "localhost",
			"return": "301 https://$host$uri"

		},
		{
			"listen": ["443", "[::]:443"],
			"server_name": "localhost",
			"root": "datas",
			"locations": 
			{
				"/site": 
				{
					"root": "datas/website",
					"index": ["index.html", "index.php"],
					"try_files": "$uri /$uri =404"
				},
				"/img":
				{
					"index": ["datas/gallery.html"],
					"autoindex": true
				},
				"/": {"return": "404"}
			}
		}
	]
}
